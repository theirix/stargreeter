<?xml version="1.0" encoding="utf-8"?>
<stargreeter>
    <settings>
        <slide-time>5</slide-time>
        <keep-last-slide>false</keep-last-slide>
        <audio-name>theme.mp3</audio-name>
        <!-- sound must be located in assets/ directory -->
    </settings>

    <beginning>
        <text>hello world
            hello again
        </text>
        <font size="46" color="#ff0000">FreeSansBold</font>
        <!-- font must be located in assets/ directory -->
    </beginning>

    <slides>
        <slide>
            <text>Second slide
                And the next lime
                will be three
            </text>
            <font size="46" color="red">FreeSansBold</font>
        </slide>
    </slides>

</stargreeter>